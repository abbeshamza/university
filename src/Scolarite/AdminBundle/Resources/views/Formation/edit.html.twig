{% extends '::base.html.twig' %}
{% block title %}Modifier Formation{% endblock %}
{% block body -%}
    {#    {% form_theme edit_form 'MyBookAdminBundle:Form:errors.html.twig' %}#}
    <div class="col-lg-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="{{ path('scolarite_admin_homepage') }}"><i class="fa fa-home"></i> Dashbord</a></li>            
            <li><a href="{{ path('formation') }}">Formations</a></li>
            <li class="active">Modifier formation</li>
        </ul>
        <!--breadcrumbs end -->
        <section class="panel">
            <header class="panel-heading">
                Modifier formation
            </header>
            <div class="panel-body">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Success!
                        </h4>
                        <p>{{ flashMessage }}</p>
                    </div>
                {% endfor %}
                <div class="clearfix">
                    <div class="btn-group pull-right">
                        <a href="{{ path('formation') }}" class="btn btn-primary">
                            Annuler <i class="fa fa-undo"></i>
                        </a>
                    </div>                        
                </div>
                <div class="space15"></div>
                <div class="position-center">
                    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'id': 'frm-formation'} }) }}
                    <div class="form-group">
                        {{ form_label(edit_form.titre, 'Titre', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.titre, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.titre) }}
                            <p class="help-block">Modifier le titre de la formation.</p>
                        </div>
                    </div>    
                    <div class="form-group">
                        {{ form_label(edit_form.description, 'Description', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.description, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.description) }}
                            <p class="help-block">Modifier la description de la formation.</p>
                        </div>
                    </div>    
                    <div class="form-group">
                        {{ form_label(edit_form.formateur, 'Formateur', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.formateur, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.formateur) }}
                            <p class="help-block">Modifier le formateur.</p>
                        </div>
                    </div>    
                    <div class="form-group">
                        {{ form_label(edit_form.salle, 'Salle', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.salle, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.salle) }}
                            <p class="help-block">Sélectionner la salle.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.dateDebut, 'Salle', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.dateDebut, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.dateDebut) }}
                            <p class="help-block">Sélectionner la date début.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.dateFin, 'Salle', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.dateFin, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.dateFin) }}
                            <p class="help-block">Sélectionner la date fin .</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-danger">Envoyer</button>
                        </div>
                    </div>
                    {{ form_rest(edit_form) }}
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock body %}
