{% extends '::base.html.twig' %}
{% block title %}Ajouter Emlpoi{% endblock %}
{% block body -%}
    {#    {% form_theme edit_form 'MyBookAdminBundle:Form:errors.html.twig' %}#}
    <div class="col-lg-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="{{ path('scolarite_admin_homepage') }}"><i class="fa fa-home"></i> Dashbord</a></li>            
            <li><a href="{{ path('emploi') }}">Emlpoi</a></li>
            <li class="active">Ajouter emploi</li>
        </ul>
        <!--breadcrumbs end -->
        <section class="panel">
            <header class="panel-heading">
                Ajouter emlpoi
            </header>
            <div class="panel-body">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Success!
                        </h4>
                        <p>{{ flashMessage }}</p>
                    </div>
                {% endfor %}
                    
                <div class="clearfix">
                    <div class="btn-group pull-right">
                        <a href="{{ path('emploi') }}" class="btn btn-primary">
                            Annuler <i class="fa fa-undo"></i>
                        </a>
                    </div>                        
                </div>
                <div class="space15"></div>
                <div class="position-center">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'id': 'frm-departement'} }) }}
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.nom, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.nom) }}
                            <p class="help-block">Entrer le nom du l'emploi.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.departement, 'Nom Departement', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.departement, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.departement) }}
                            <p class="help-block">Sélectionner le nom de la Departement.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.classe, 'Nom Classe', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.classe, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.classe) }}
                            <p class="help-block">Sélectionner le nom de la classe.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.niveau, 'Nom Niveau', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.niveau, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.niveau) }}
                            <p class="help-block">Sélectionner le nom de la Niveau.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.specialite, 'Nom Specialite', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.specialite, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.specialite) }}
                            <p class="help-block">Sélectionner  le nom de Specialite.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.file, 'Photo', { 'label_attr': {'class': 'control-label col-lg-2 col-sm-2'} }) }}
                        {{ form_errors(form.file) }}
                        <div class="col-md-4">
                            {{ form_widget(form.file, {'attr': {'class' : 'default'} }) }}
                            <p class="help-block">Image du l'emploi.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-danger">Envoyer</button>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock body %}
