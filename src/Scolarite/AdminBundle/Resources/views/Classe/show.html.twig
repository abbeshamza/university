{% extends 'ScolariteAdminBundle::Layout.html.twig' %}
{% block title %}Modifier a propos{% endblock %}

{% block body -%}
    <h1>Classe</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Nbretudiant</th>
                <td>{{ entity.nbrEtudiant }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('classe') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('classe_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
