{% extends '::base.html.twig' %}
{% block title %}Modifier Etudiant{% endblock %}
{% block body -%}
    {#    {% form_theme edit_form 'MyBookAdminBundle:Form:errors.html.twig' %}#}
    <div class="col-lg-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="{{ path('scolarite_admin_homepage') }}"><i class="fa fa-home"></i> Dashbord</a></li>            
            <li><a href="{{ path('etudiant') }}">Etudiants</a></li>
            <li class="active">Modifier Etudiant</li>
        </ul>
        <!--breadcrumbs end -->
        <section class="panel">
            <header class="panel-heading">
                Modifier Etudiant
            </header>
            <div class="panel-body">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Success!
                        </h4>
                        <p>{{ flashMessage }}</p>
                    </div>
                {% endfor %}
                <div class="clearfix">
                    <div class="btn-group pull-right">
                        <a href="{{ path('etudiant') }}" class="btn btn-primary">
                            Annuler <i class="fa fa-undo"></i>
                        </a>
                    </div>                        
                </div>
                <div class="space15"></div>
                <div class="position-center">
                    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'id': 'frm-classe'} }) }}
                    <div class="form-group">
                        {{ form_label(edit_form.nom, 'Nom', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.nom, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.nom) }}
                            <p class="help-block">Entrer le nom d'Etudiant.</p>
                        </div>
                    </div>    
                        <div class="form-group">
                        {{ form_label(edit_form.prenom, 'Prenom', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.prenom, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.prenom) }}
                            <p class="help-block">Entrer le prenom d'Etudiant.</p>
                        </div>
                    </div> 
                           <div class="form-group">
                        {{ form_label(edit_form.dateNaissance, 'Date Naissance', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.dateNaissance, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.dateNaissance) }}
                            <p class="help-block">Entrer le date naissance d'Etudiant.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.email, 'Email', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.email, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.email) }}
                            <p class="help-block">Entrer l'email d'Etudiant.</p>
                        </div>
                    </div> 
                         <div class="form-group">
                        {{ form_label(edit_form.tel, 'Tel', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.tel, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.tel) }}
                            <p class="help-block">Entrer le telephone d'Etudiant.</p>
                        </div>
                    </div> 
                          <div class="form-group">
                        {{ form_label(edit_form.mobile, 'Mobile', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.mobile, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.mobile) }}
                            <p class="help-block">Entrer le telephone mobile d'Etudiant.</p>
                        </div>
                    </div>
                       
                            <div class="form-group">
                        {{ form_label(edit_form.adresse, 'Adresse', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.adresse, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.adresse) }}
                            <p class="help-block">Sélectionner l'adresse.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.departement, 'Département', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.departement, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.departement) }}
                            <p class="help-block">Sélectionner le département.</p>
                        </div>
                    </div>    
                    
                    <div class="form-group">
                        {{ form_label(edit_form.classe, 'Classe', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.classe, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.classe) }}
                            <p class="help-block">Sélectionner le classe.</p>
                        </div>
                    </div> 
                         <div class="form-group">
                        {{ form_label(edit_form.niveau, 'Niveau', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(edit_form.niveau, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(edit_form.niveau) }}
                            <p class="help-block">Sélectionner le niveau.</p>
                        </div>
                    </div> 
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-danger">Envoyer</button>
                        </div>
                    </div>
                    {{ form_rest(edit_form) }}
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock body %}
