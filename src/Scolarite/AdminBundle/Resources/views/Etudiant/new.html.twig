{% extends '::base.html.twig' %}
{% block title %}Ajouter Etudiant{% endblock %}
{% block body -%}
    {#    {% form_theme edit_form 'MyBookAdminBundle:Form:errors.html.twig' %}#}
    <div class="col-lg-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="{{ path('scolarite_admin_homepage') }}"><i class="fa fa-home"></i> Dashbord</a></li>            
            <li><a href="{{ path('enseignant') }}">Etudiants</a></li>
            <li class="active">Ajouter Etudiant</li>
        </ul>
        <!--breadcrumbs end -->
        <section class="panel">
            <header class="panel-heading">
                Ajouter Etudiant
            </header>
            <div class="panel-body">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="fa fa-times"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Success!
                        </h4>
                        <p>{{ flashMessage }}</p>
                    </div>
                {% endfor %}
                <div class="clearfix">
                    <div class="btn-group pull-right">
                        <a href="{{ path('etudiant') }}" class="btn btn-primary">
                            Annuler <i class="fa fa-undo"></i>
                        </a>
                    </div>                        
                </div>
                <div class="space15"></div>
                <div class="position-center">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'id': 'frm-classe'} }) }}
                     <div class="form-group">
                        {{ form_label(form.nom, 'Nom', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.nom, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.nom) }}
                            <p class="help-block">Entrer le nom d'Etudiant.</p>
                        </div>
                    </div>    
                        <div class="form-group">
                        {{ form_label(form.prenom, 'Prenom', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.prenom, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.prenom) }}
                            <p class="help-block">Entrer le prenom d'Etudiant.</p>
                        </div>
                    </div>    
                    <div class="form-group">
                        {{ form_label(form.email, 'Email', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.email, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.email) }}
                            <p class="help-block">Entrer l'email d'Etudiant.</p>
                        </div>
                    </div> 
                         <div class="form-group">
                        {{ form_label(form.tel, 'Tel', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.tel, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.tel) }}
                            <p class="help-block">Entrer le telephone d'Etudiant.</p>
                        </div>
                    </div> 
                          <div class="form-group">
                        {{ form_label(form.mobile, 'Mobile', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.mobile, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.mobile) }}
                            <p class="help-block">Entrer le telephone mobile d'Etudiant.</p>
                        </div>
                    </div>
                               <div class="form-group">
                        {{ form_label(form.dateNaissance, 'Date Naissance', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.dateNaissance, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.dateNaissance) }}
                            <p class="help-block">Entrer le date naissance d'Etudiant.</p>
                        </div>
                    </div>
                     
                            <div class="form-group">
                        {{ form_label(form.adresse, 'Adresse', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.adresse, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.adresse) }}
                            <p class="help-block">Sélectionner l'adresse.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.departement, 'Département', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.departement, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.departement) }}
                            <p class="help-block">Sélectionner le département.</p>
                        </div>
                    </div>    
                    
                    <div class="form-group">
                        {{ form_label(form.classe, 'Classe', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.classe, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.classe) }}
                            <p class="help-block">Sélectionner le classe.</p>
                        </div>
                    </div> 
                         <div class="form-group">
                        {{ form_label(form.niveau, 'Niveau', { 'label_attr': {'class': 'col-lg-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-10">
                            {{ form_widget(form.niveau, {'attr': {'class' : 'form-control'} }) }}
                            {{ form_errors(form.niveau) }}
                            <p class="help-block">Sélectionner le niveau.</p>
                        </div>
                    </div> 
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-danger">Envoyer</button>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    {  <script src="{{asset('bundles/scolaraiteadmin/js/jquery.validate.min.js')}}"></script>}
    {<script src="jquery.js">
      
    </script>}
{% endblock javascripts %}



